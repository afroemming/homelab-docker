LLDAP_LDAP_BASE_DN=dc=melondrop,dc=net     # replace with your domain
UID=0                                              # run as root
GID=0                                              # run as root

# Secrets: lldap reads them from the specified files.
# This way, the secrets are not part of any process' environment.
LLDAP_JWT_SECRET_FILE=/run/secrets/ldap_jwt_secret
LLDAP_LDAP_USER_PASS_FILE=/run/secrets/ldap_user_pass